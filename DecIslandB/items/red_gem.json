{
  "format_version": "1.16.100",
  "minecraft:item": {
    "description": {
      "category": "items",
      "identifier": "dec:red_gem"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.decorations"
      },
      "minecraft:display_name": {
        "value": "item.dec:red_gem.name"
      },
      "minecraft:icon": {
        "texture": "red_gem"
      },
      "minecraft:use_animation": "eat",
      "minecraft:render_offsets": "cookie",
      "minecraft:stacked_by_data": false,
      "minecraft:foil": true,
      "minecraft:on_use": {
        "on_use": {
          "event": "use",
          "target": "self"
        }
      },
      "minecraft:cooldown": {
        "category": "red_gem",
        "duration": 0.3
      }
    },
    "events": {
      "use": {
        "run_command": {
          "command": [
            "tag @s[scores={maxmagic=40..58}] add clear_red_gem",
            "tellraw @s[scores={maxmagic=20..38}] { \"rawtext\" : [ { \"translate\" : \"text.dec:red_gem_not_enough.name\" } ] }",
            "tellraw @s[scores={maxmagic=40}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm11.name\" } ] }",
            "tellraw @s[scores={maxmagic=42}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm12.name\" } ] }",
            "tellraw @s[scores={maxmagic=44}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm13.name\" } ] }",
            "tellraw @s[scores={maxmagic=46}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm14.name\" } ] }",
            "tellraw @s[scores={maxmagic=48}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm15.name\" } ] }",
            "tellraw @s[scores={maxmagic=50}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm16.name\" } ] }",
            "tellraw @s[scores={maxmagic=52}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm17.name\" } ] }",
            "tellraw @s[scores={maxmagic=54}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm18.name\" } ] }",
            "tellraw @s[scores={maxmagic=56}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm19.name\" } ] }",
            "tellraw @s[scores={maxmagic=58}] { \"rawtext\" : [ { \"translate\" : \"text.dec:uptomm20.name\" } ] }",
            "tellraw @s[scores={maxmagic=58..}] { \"rawtext\" : [ { \"translate\" : \"text.dec:red_gem_max.name\" } ] }",
            "scoreboard players add @s[tag=clear_red_gem] maxmagic 2",
            "clear @s[tag=clear_red_gem] dec:red_gem 0 1",
            "tag @s[tag=clear_red_gem] remove clear_red_gem"
          ]
        }
      }
    }
  }
}